@{
    ViewData["Title"] = "404";
}
<h2>Login</h2>
<form action="Login" method="post">
    <div class="form-group row">
        <div class="col-sm-2">
            <label for="username">Username</label>
        </div>
        <div class="col-sm-6">
            <input name="username" type="text" class="form-control" placeholder="Enter username" />
            <input name="password" type="password" class="form-control" placeholder="Enter password" />
            <label for="password" style="color:maroon">Invalid username or password</label>
        </div>
        <div class="col-sm-2">
            <button action="POST" asp-action="Login" asp-controller="UserAccess" type="submit" class="btn btn-primary" value="Submit">Submit</button>
        </div>
    </div>
</form>


